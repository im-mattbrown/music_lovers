<img class='responsive-img title' src='http://i.imgur.com/XQaeuym.png'>
<div class="login-form">
    <h5 id="mobile-login">Log In</h5>


    <%= form_for @user, url: '/sessions', method: 'post' do |f| %>
      <%= f.text_field :email, :placeholder=>"Email" %>
      <%= f.password_field :password, :placeholder=>"Password" %>
      <%= f.submit "Submit", :class => 'waves-effect waves-red btn' %>
    <% end %>
    <%= link_to 'Sign Up', new_user_path %>
  </div>

  <div class="login-info">
  <h5> To skip sign up and preview the site click Already a user, login here with: </h5>
  <h6> <strong> Email: </strong> sample@music-lovers.com </h6>
  <h6> <strong> Password: </strong> music </h6>
  </div>
